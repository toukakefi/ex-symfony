{% extends 'base.html.twig' %}

{% block title %}Liste des Projets{% endblock %}

{% block body %}
    <h1>Liste des Projets</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Durée</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for projet in projets %}
                <tr>
                    <td>{{ projet.nom }}</td>
                    <td>{{ projet.duree }}</td>
                    <td>
                        <a href="{{ path('projet_show', {'id': projet.id}) }}">Voir</a>
                        <a href="{{ path('projet_edit', {'id': projet.id}) }}">Modifier</a>
                        <form action="{{ path('projet_delete', {'id': projet.id}) }}" method="post">
                            {{ csrf_token('delete' ~ projet.id) }}
                            <button type="submit" class="btn btn-link">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('projet_new') }}">Créer un nouveau projet</a>
{% endblock %}
